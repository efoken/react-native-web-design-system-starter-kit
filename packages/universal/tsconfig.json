{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "baseUrl": ".",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "**/*.stories.tsx",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  }
}
